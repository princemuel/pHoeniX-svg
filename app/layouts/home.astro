---
import type { ComponentProps } from "astro/types";
import RootLayout from "./root.astro";

type Props = Prettify<
  ComponentProps<typeof RootLayout> & {
    jsonld: unknown;
  }
>;

const { jsonld, ...rest } = Astro.props;
---

<RootLayout {...rest}>
  <script
    is:inline
    type="application/ld+json"
    slot="jsonld"
    set:html={JSON.stringify(jsonld)}
  />

  <slot />
</RootLayout>
