---
import { Picture } from "astro:assets";
import AvatarImage from "@/assets/images/placeholder.avif";
import { Icon } from "astro-icon/components";
// import AstroThemeWidget from "./astro-theme.astro";
import Container from "../atoms/container.astro";
import Link from "../atoms/link.astro";
import RoutesMenu from "../molecules/routes-menu.astro";
---

<header
  class="sticky top-0 z-10 w-full border-b border-gray-200 bg-gray-100/80 backdrop-blur-md transition-colors ease-in-out"
>
  <Container class="">
    <div class="py-4">
      <div class="flex items-center max-md:justify-between">
        <figure class="px-2 sm:p-0">
          <Link
            href="/"
            class="flex size-9 items-center justify-center overflow-hidden rounded-full border-2"
          >
            <Picture
              width={32}
              height={32}
              alt="Prince Muel"
              src={AvatarImage}
              formats={["avif", "webp"]}
              loading="eager"
            />
          </Link>
          <figcaption class="sr-only">Home</figcaption>
        </figure>

        <div
          class="max-md:fixed max-md:inset-x-0 max-md:bottom-[5vh] max-md:z-50 max-md:grid max-md:w-full max-md:place-content-center md:ml-auto"
        >
          <nav aria-label="Main">
            <RoutesMenu />
          </nav>
        </div>

        <div class="flex items-center gap-2">
          {/*<AstroThemeWidget /> */}
          <div class="">
            <Icon name="lucide:command" class="text-xl text-gray-900" />
          </div>
        </div>
      </div>
    </div>
  </Container>
</header>
