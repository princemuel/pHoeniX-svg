---
import { Picture } from "astro:assets";
import AvatarImage from "@/assets/images/placeholder.avif";
import Container from "../atoms/container.astro";
import Link from "../atoms/link.astro";
import RoutesMenu from "./routes.astro";
---

<header class="sticky top-0 z-30 w-full transition-colors ease-in-out">
  <Container>
    <div class="py-6">
      <div class="flex items-center justify-between">
        <figure class="px-2 sm:p-0">
          <Link
            href="/"
            class="flex size-9 items-center justify-center overflow-hidden rounded-full border-2"
          >
            <Picture
              width={32}
              height={32}
              alt="Prince Muel"
              src={AvatarImage}
              formats={["avif", "webp"]}
              loading="eager"
            />
          </Link>
          <figcaption class="sr-only">Home</figcaption>
        </figure>
        <div
          class="mx-auto max-md:fixed max-md:inset-x-0 max-md:bottom-[5vh] max-md:z-50 max-md:grid max-md:w-full max-md:place-content-center"
        >
          <nav aria-label="Main">
            <RoutesMenu />
          </nav>
        </div>
        <!-- <ThemeWidget /> -->
      </div>
    </div>
  </Container>
</header>
