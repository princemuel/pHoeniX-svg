---
import { join } from "node:path";
import { AstroFont as Font } from "astro-font";

const fontsPath = join(process.cwd(), "public", "static", "fonts");
---

<Font
  config={[
    {
      name: "Mono Lisa",
      src: [
        {
          style: "normal",
          path: join(fontsPath, "lisa-regular.woff2"),
        },
        {
          style: "italic",
          path: join(fontsPath, "lisa-italic.woff2"),
        },
      ],
      preload: false,
      display: "swap",
      cssVariable: "font-mono",
      fallback: "monospace",
      fallbackName: "__Mono_Lisa_Fallback",
    },
  ]}
/>
