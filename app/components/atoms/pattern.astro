---
import PatternPNG from "@/assets/images/pattern.png";
import type { HTMLAttributes } from "astro/types";

type Props = Omit<HTMLAttributes<"div">, "class:list">;

const { class: className, ...rest } = Astro.props;
let image = `url(${PatternPNG.src})`;
---

<div
  {...rest}
  class:list={[
    "absolute top-0 bg-[image:var(--image)] bg-[length:1.5rem] bg-repeat",
    className,
  ]}
>
</div>

<style define:vars={{ image }}></style>
