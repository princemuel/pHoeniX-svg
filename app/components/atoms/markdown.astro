---
import LinkedSVG from "@/assets/icons/linked.svg";

import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"article">;

const { class: className, ...rest } = Astro.props;

const linked = `url(${LinkedSVG.src})`;
---

<article
  id="article"
  class:list={[
    "prose prose-base prose-gray dark:prose-invert",
    "prose-a:font-bold",
    className,
  ]}
  {...rest}
>
  <slot />
</article>

<style define:vars={{ linked }}></style>
