---
import LinkedSVG from "@/assets/icons/linked.svg";
import type { HTMLAttributes } from "astro/types";
type Props = HTMLAttributes<"article">;

const { class: className, ...rest } = Astro.props;

let image = `url(${LinkedSVG.src})`;
---

<article
  id="article"
  aria-labelledby="heading"
  class:list={[
    "prose prose-gray",
    "prose-a:text-blue-800 visited:prose-a:text-purple-800",
    "[&_.linked]:font-semibold [&_.linked]:text-inherit [&_.linked]:no-underline",
    className,
  ]}
  {...rest}
>
  <slot />
</article>

<style define:vars={{ image }}></style>
